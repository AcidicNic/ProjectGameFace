                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Press Delay (ms)"
                android:textStyle="bold"
                android:textColor="#FFC107"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <SeekBar
                android:id="@+id/quickTapThresholdSeekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="18"
                android:maxHeight="3dp"
                android:min="0"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumbTint="#1a73e8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quickTapThresholdTxt" />
            <TextView
                android:id="@+id/decreaseQuickTapThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#444746"
                android:text="@string/decrease"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/textview_custom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quickTapThresholdSeekBar" />
            <TextView
                android:id="@+id/increaseQuickTapThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/increase"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/textview_custom"
                android:textColor="#444746"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quickTapThresholdSeekBar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/longTapThresholdLayout"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quickTapThresholdLayout"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/progressLongTapThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/longTapThresholdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Tap Threshold (ms)"
                android:textStyle="bold"
                android:textColor="#1a73e8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <SeekBar
                android:id="@+id/longTapThresholdSeekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="14"
                android:maxHeight="3dp"
                android:min="0"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumbTint="#1a73e8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/longTapThresholdTxt" />
            <TextView
                android:id="@+id/decreaseLongTapThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#444746"
                android:text="@string/decrease"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/textview_custom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/longTapThresholdSeekBar" />
            <TextView
                android:id="@+id/increaseLongTapThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/increase"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/textview_custom"
                android:textColor="#444746"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/longTapThresholdSeekBar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/pathCursorSwitch"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Show Path Cursor"
            app:switchPadding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/longTapThresholdLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pathCursorLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pathCursorSwitch"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/progressPathCursor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textStyle="bold"
                android:textColor="@color/textview_color_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/pathCursorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Path Cursor Acceleration"
                android:textStyle="bold"
                android:textColor="@color/textview_color_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <SeekBar
                android:id="@+id/pathCursorSeekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:maxHeight="3dp"
                android:max="24"
                android:min="0"
                android:progress="12"
                android:progressDrawable="@drawable/custom_seekbar_selector"
                android:thumbTint="#1a73e8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pathCursorTxt" />
            <TextView
                android:id="@+id/decreasePathCursor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#444746"
                android:text="@string/slower"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/inc_dec_button_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pathCursorSeekBar" />
            <TextView
                android:id="@+id/increasePathCursor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/faster"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/inc_dec_button_selector"
                android:textColor="#444746"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pathCursorSeekBar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pathCursorMinLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pathCursorLayout"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/pathCursorMinProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/textview_color_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/pathCursorMinTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Path Cursor Minimum Speed [WIP]"
                android:textStyle="bold"
                android:textColor="@color/textview_color_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <SeekBar
                android:id="@+id/pathCursorMinSeekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="9"
                android:maxHeight="3dp"
                android:min="0"
                android:progressDrawable="@drawable/custom_seekbar_selector"
                android:thumbTint="#1a73e8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pathCursorMinTxt" />
            <TextView
                android:id="@+id/pathCursorMinDecrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#444746"
                android:text="@string/slower"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/inc_dec_button_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pathCursorMinSeekBar" />
            <TextView
                android:id="@+id/pathCursorMinIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/faster"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/inc_dec_button_selector"
                android:textColor="#444746"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pathCursorMinSeekBar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
